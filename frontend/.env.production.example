# Production Environment Configuration for Better-Auth Logger
# Copy to .env.local for production deployments

# Authentication URLs (update for production)
BETTER_AUTH_URL=https://your-production-domain.com
BACKEND_URL=https://your-backend-api.com

# Production Logger Configuration
# Optimal settings for production performance and security

# Server-side logging (info level recommended for production)
LOG_LEVEL=info
LOG_PRODUCTION=true
LOG_STRUCTURED=true

# Client-side logging (warn level for production to reduce noise)
NEXT_PUBLIC_LOG_LEVEL=warn
NEXT_PUBLIC_LOG_PRODUCTION=true
NEXT_PUBLIC_LOG_BROWSER=false
NEXT_PUBLIC_LOG_STRUCTURED=true

# Database (production PostgreSQL with SSL enabled)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
DB_SSL=true

# OAuth Providers (production credentials)
GITHUB_CLIENT_ID=prod-github-client-id
GITHUB_CLIENT_SECRET=prod-github-secret

GOOGLE_CLIENT_ID=prod-google-client-id
GOOGLE_CLIENT_SECRET=prod-google-secret

AZURE_CLIENT_ID=prod-azure-client-id
AZURE_CLIENT_SECRET=prod-azure-secret
AZURE_TENANT_ID=your-tenant-id-or-common

# Email service
RESEND_API_KEY=prod-resend-api-key

# Security
BETTER_AUTH_SECRET=your-256-bit-production-secret