# Better Auth Configuration
# Generate with: npx @better-auth/cli secret
BETTER_AUTH_SECRET=your-better-secret-key
BETTER_AUTH_URL=http://localhost:3000

# OAuth Providers (all optional - enable only what you need)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft/Azure SSO (Enterprise SSO support)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=common  # Use 'common' for personal + work accounts, or your tenant ID for org-only

# PostgreSQL Configuration (Frontend)
# Standard PostgreSQL connection string with SSL mode
DATABASE_URL=postgresql://mcp_user:mcp_password@localhost:5432/mcp_registry?sslmode=disable

# Explicit SSL override (optional) - takes precedence over sslmode parameter
# Valid values: true, false
# Leave unset to use sslmode parameter from DATABASE_URL
DB_SSL=false

RESEND_API_KEY=your-resend-api-key

# Logger Configuration
# Log level: debug, info, warn, error
NEXT_PUBLIC_LOG_LEVEL=debug
LOG_LEVEL=debug

# Enable logging in production (default: false)
NEXT_PUBLIC_LOG_PRODUCTION=false
LOG_PRODUCTION=false

# Enable logging in browser (default: true in development)
NEXT_PUBLIC_LOG_BROWSER=true

# Enable structured logging with JSON output (default: true on server)
NEXT_PUBLIC_LOG_STRUCTURED=false
LOG_STRUCTURED=true